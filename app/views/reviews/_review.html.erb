<li id="review-<%= review.id %>">
  <!-- <span class="course"><%= link_to review.course.name, review.course %></span> -->
  <span class="content"><%= review.content %></span>              <br />    <!-- EW EW PLEASE CSS FIX -->
  <span class="clarity">Clarity: <%= review.clarity %></span>     <br />
  <span class="workload">Workload: <%= review.intensity %></span> <br />
  <span class="worthit">Worth it?: <%= review.worthit %></span>   <br />

  <%= link_to like_path(review), :remote => true, method: :put, class: 'vpos' do %>
    <i class="fa fa-thumbs-up"></i>
    <span class="vcount-<%= review.id %>"><%= review.get_upvotes.size %></span>
  <% end %>

  <%= link_to dislike_path(review), :remote => true, method: :put, class: 'npos' do %>
    <i class="fa fa-thumbs-down"></i> 
    <span class="ncount-<%= review.id %>"><%= review.get_downvotes.size %></span>
  <% end %>

  <span class="timestamp">
    Posted <%= time_ago_in_words(review.created_at) %> ago by <%= User.find(review.user_id).name %>.
  </span>
</li>