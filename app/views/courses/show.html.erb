   <%= link_to 'Back', courses_path %> -->
</div>

<div class="row">
  <div class="col-md-8">
    <% if @course.reviews.any? %>  
      <h3>Reviews (<%= @course.reviews.count %>)</h3>
      <ol class="reviews">
        <%= render @reviews %>
      </ol>
      <%= will_paginate @reviews %>
    <% else %>
      <h3>No reviews yet for this class :( </h3>
    <% end %>
  </div>
  <section class="review_form col-md-4">
    <%= render 'shared/review_form' %>
  </section>
</div>