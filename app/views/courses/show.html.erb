<% provide(:title, @course.name) %>

<div class="row">
    <section class="course_info col-md-8">
      <%= render 'shared/course_info' %>
    </section>
    <section class="course_avg_ratings col-md-4"?>
      <table>
        <thead>
          <td><h4>Clarity</h4></td>
          <td><h4>Workload</h4></td>
          <td><h4>Worth</h4></td>
        </thead>
        <tr>
          <td>
            <h3>5</h3>
          </td>
          <td>
            <h3>5</h3>
          </td>
          <td>
            <h3>5</h3>
          </td>
        </tr>
      </table>
    </section>
