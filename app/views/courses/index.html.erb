<h1>Listing Courses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Department</th>
      <th>Crn</th>
      <th>Professor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.department_id %></td>
        <td><%= course.crn %></td>
        <td><%= Professor.find(course.professor_id).name %></td>

        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>

<%= search_form_for @search do |f| %>
  <fieldset>
    <legend>User</legend>
    <ul>
      <li>
        <%= f.label :name_cont %>
        <%= f.text_field :name_cont %>
      </li>
      <li>
        <%= f.label :crn_cont %>
        <%= f.text_field :crn_cont %>
      </li>
    </ul>
  </fieldset>

  <%= f.submit "Search!" %>
<% end %>
